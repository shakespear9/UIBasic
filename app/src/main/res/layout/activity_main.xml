    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_centerInParent="true"
        android:id="@+id/editTextName"
        android:textStyle="italic|bold"
        android:lines="4"
        android:inputType="text"

        />

